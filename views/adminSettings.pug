<!DOCTYPE html>
<html>
<head>
    <title>Lit Blog Panel | Settings</title>
    link(rel="shortcut icon", href=settingData.siteIcon)
    include header.pug
</head>
<body>
    <div class="d-flex" id="wrapper">
        include sidebar.pug
        <div id="page-content-wrapper">
            include navbar.pug
            <div class="container m-4 pr-4">
                <p class="panelHead mb-3">Settings</p>
                <form action="/settings/edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Site Name</label>
                        input(type="text" class="form-control" name="sitename" value=settingData.siteName required)
                    </div>
                    <div class="form-group">
                        <label>Site Description</label>
                        textarea(class="form-control" rows="3" name="sitedescription" required)= settingData.siteDescription
                    </div>
                    <label>Socials</label>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="lab la-instagram"></i></span>
                        </div>
                        input(type="text" class="form-control" name="instagram" value=settingData.instagram required)
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="lab la-facebook"></i></span>
                        </div>
                        input(type="text" class="form-control" name="facebook" value=settingData.facebook required)
                    </div>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="las la-envelope"></i></span>
                        </div>
                        input(type="text" class="form-control" name="email" value=settingData.email required)
                    </div>
                    <div class="form-group mb-3">
                        <label>Site Thumbnail</label>
                        <div class="custom-file">
                            <input type="file" accept="image/*" class="custom-file-input" id="siteImgInput" name="siteimage">
                            <label class="custom-file-label">Choose file</label>
                        </div>
                    </div>
                    <div class="imgContainer mb-3">
                        img(id="siteImgPreview" src=settingData.siteImage)
                    </div>
                    <div class="form-group mb-3">
                        <label>Site Icon</label>
                        <div class="custom-file">
                            <input type="file" accept="image/*" class="custom-file-input" id="iconImgInput" name="siteicon">
                            <label class="custom-file-label">Choose file</label>
                        </div>
                    </div>
                    <div class="imgContainer mb-3">
                        img(id="iconImgPreview" src=settingData.siteIcon)
                    </div>
                    <button type="submit" class="btn successBtn">Save Changes <i class="las la-check"></i></button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>