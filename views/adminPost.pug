<!DOCTYPE html>
<html>
<head>
    <title>Lit Blog Panel | Posts</title>
    include header.pug
</head>
<body>
    <div class="d-flex" id="wrapper">
        include sidebar.pug
        <div id="page-content-wrapper">
            include navbar.pug
            <div class="container-fluid m-4">
                <div class="row">
                    <p class="panelHead">Your Posts</p>
                    button(class="btn btn-success" data-toggle="modal" data-target="#createModal") Create Post
                </div>
                <div class="row table-responsive">
                    <table class="mt-3" id="main_table" style="width: 100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>URL<th>
                                <th>Created At</th>
                                <th>Author</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            if postData
                                each post in postData
                                    <tr>
                                        td= post.id
                                        td= post.title
                                        <td>
                                            a(href="/post/" + post.url)= "/" + post.url
                                        <td>
                                        td= post.createdAt
                                        td= post.author
                                        <td>
                                            button(class="btn btn-primary" data-toggle="modal" data-target="#editModal" onclick="editPost('" + post.id + "')") Edit
                                            button(class="btn btn-danger" data-toggle="modal" data-target="#deleteModal" onclick="deletePost('" + post.id + "')") Delete
                                        </td>
                                    </tr>
                            else
                                <tr>
                                    <td>No posts found</td>
                                </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>	
    </div>
    <div class="modal fade" id="createModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form action="/post/create" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title">Create Post</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Title</span>
                            </div>
                            <input type="text" class="form-control" name="title" required>
                            <input type="hidden" class="form-control" id="createInput" name="content" required>
                        </div>
                        <div id="createQuill"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="editModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form method="post" id="editForm">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Post</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="editTitle" name="title" placeholder="Title" required>
                            <input type="text" class="form-control" id="editUrl" name="url" placeholder="URL" required>
                            <input type="hidden" class="form-control" id="editInput" name="content" required>
                        </div>
                        <div id="editQuill"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <form method="post" id="deleteForm">
                    <div class="modal-header">
                        <h5 class="modal-title">Delete Post</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                       <p>Are you sure you want to delete this post?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-success">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>