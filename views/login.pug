<html>
	<head>
		<title>Lit Blog | Log In</title>
		link(rel="shortcut icon", href=settings.siteIcon)
		include header.pug
	</head>
	<body>
		<div class="container center">
			<div class="row">
				<div class="col-md-6 offset-md-3">
					<div class="card jumbotron">
						<form action="login" method="POST">
							<h2>Log In</h2>
							<div class="form-group input-group mt-2">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="las la-user"></i></span>
								</div>
								<input class="form-control" type="text" name="username" placeholder="Username" required>
							</div>
							<div class="form-group input-group">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="las la-key"></i></span>
								</div>
								<input class="form-control" type="password" name="password" placeholder="Password" required>
							</div>
							<button type="submit" class="btn primaryBtn btn-block">Submit</button>
							if error
								span(class="text-danger")= error
						</form>
					</div>
				</div>
			</div>
		</div>
		<div class="bottom">
			span= "Lit Blog ðŸ”¥ " + global.APP_VERSION
		</div>
	</body>
</html>
